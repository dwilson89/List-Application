@model List_manager.Models.UserAnime

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.Anime.Title)</h4>
    <hr />
    
    <div class="row">

        <div class="container-fluid col-md-3">
            
            <img src="@Url.Content(Model.Anime.Image)" class="img-responsive">
            
        </div>


        <dl class="dl container-fluid col-md-9">
            <dt>
                @Html.DisplayNameFor(model => model.Anime.English)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Anime.English)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Anime.Synonyms)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Anime.Synonyms)
            </dd>
            <dt>
                Run Dates
            </dt>
            <dd>
                @Model.Anime.GetStartDateNiceFormat() - @Model.Anime.GetEndDateNiceFormat()
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Anime.Status)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Anime.Status)
            </dd>
        
            <dt>
                @Html.DisplayNameFor(model => model.User_Status)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.User_Status)
            </dd>

        </dl>
    </div>
    
    
        <form asp-action="Delete">
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
   
</div>
