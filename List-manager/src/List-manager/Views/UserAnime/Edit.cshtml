@model List_manager.Models.UserAnime

@{
    ViewData["Title"] = "Edit";
}


<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UserAnimeID" />
        <input type="hidden" asp-for="AnimeID" />
        <input type="hidden" asp-for="ApplicationUserId" />

        @Html.Partial("_editFieldsPartial", Model)

    </div>
</form>

<div>
    <a href="@ViewData["returnUrl"]">Back to List</a> |
    <a href="@Model.Anime.GetLink()" target="_blank">Go to MAL Webpage</a> |
    <a asp-action="Delete">Delete</a> | 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
